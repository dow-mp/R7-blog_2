<%# form_for(@page) do |f| %> <!-- now that we're using a partial, we need to reference the local variable and not the instance variable -->
<%= form_for(page) do |f| %> <!-- referencing the 'page' local variable from the edit.html.erb and new.html.erb pages -->
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div class="field">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>

    <div class="field">
        <%= f.label :slug %>
        <%= f.text_field :slug %>
    </div>

    <div class="field">
        <%= f.submit %>
    </div>
<% end %>